            android:name="com.ifox.main.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="com.ifox.other.AboutActivity">            
        </activity>
        
        
        <activity 
            android:name="com.ifox.other.LoginActivity">            
        </activity>
        
        
        <activity 
            android:name="com.ifox.other.RegisterActivity">            
        </activity>
        
        
        <activity 
            android:name="com.ifox.other.UpdateActivity">            
        </activity>
        
        <activity 
            android:name="com.ifox.fragment.NewsDetailActivity">            
        </activity>
        
    </application>

</manifest>
